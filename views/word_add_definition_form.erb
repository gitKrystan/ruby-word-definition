<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt> <%= @word.name() %> </dt>

      <!-- Show each definition of the word -->
      <% @definitions.each() do |definition|  %>
        <dd> <%= definition.text() %> </dd>
      <% end %>

      <dd>
        <form action="/words/<%= @word.id() %>/success" method="post">
          <div class="form-group">
            <textarea class="form-control" rows="3"
                      name="definition" placeholder="New Definition"></textarea>
          </div>
            <button type="submit" class="btn btn-default">Add</button>
        </form>
      </dd>
    </dl>
  </div>
</div>

<a href="/">
  <button class="btn btn-default" type="button">Go to Word List</button>
</a>
<a href="/words/<%= @word.id() %>">
  <button class="btn btn-default" type="button">Return to Word</button>
</a>
