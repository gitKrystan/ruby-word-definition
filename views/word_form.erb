<div class="panel panel-default">
  <div class="panel-body">
    <form action="/words/success" method="post" class="form-horizontal">
      <!-- Word input -->
      <div class="form-group">
        <label for="word" class="col-sm-2 control-label">Word</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="word" placeholder="Word">
        </div>
      </div>

      <!-- Definition input -->
      <div class="form-group">
        <label for="definition" class="col-sm-2 control-label">Definition</label>
        <div class="col-sm-10">
          <textarea class="form-control" rows="3"
                    name="definition" placeholder="Definition"></textarea>
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Add</button>
        </div>
      </div>
    </form>
  </div>
</div>

<a href="/">
  <button class="btn btn-default" type="button">Go to Word List</button>
</a>
